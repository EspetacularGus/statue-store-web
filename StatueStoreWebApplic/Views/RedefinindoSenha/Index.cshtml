
@{
    ViewBag.Title = "Redefinição de senha";
    Layout = "~/Views/Shared/_statueStoreLayout.cshtml";
}

<div class="container col-11 top10">

    <b style="font-size: 1.2em">Redefinir Senha</b>

    <span>Olá, Gustavo!</span>

    <div class="row container top5">
        <span>Coloque sua nova senha e lembre-se dela na próxima!</span>
    </div>
    @using (Html.BeginForm("Index", "RedefinindoSenha", FormMethod.Post, null)) {
        <div class="form-group top2" style="width: 40%">

            <input type="password" class="form-control top5" id="senha1" name="senha1" aria-describedby="emailHelp" placeholder="Nova senha">
            <input type="password" class="form-control top2" id="senha2" name="senha2" aria-describedby="emailHelp" placeholder="Repetir nova senha">
            <small id="emailHelp" class="form-text text-muted top2" style="font-size: 0.9em; width: 100vw">Sua senha é devidamente guardada e criptografada na nossa base de dados.</small>

            <button type="submit" class="btn btn-dark top5">Alterar senha</button>
        </div>
    }

</div>

<style>
    body {
        font-family: Roboto;
    }
</style>