@model StatueStoreWebApplic.Models.Endereco
@{
    ViewBag.Title = "Cadastro Endereco";
    Layout = "~/Views/Shared/_statueStoreLayout.cshtml";
}

<div class="container col-11 top5">
    <div class="col-10">
        <h2 style="padding-bottom: 1em;">Cadastro</h2>
        @using (Html.BeginForm(FormMethod.Post)) {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.Estado)
                @Html.DropDownListFor(m => m.Estado, new SelectList(Enum.GetValues(typeof(StatueStoreWebApplic.Models.Estados))), null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Cidade)
                @Html.TextBoxFor(m => m.Cidade, new { @class = "form-control", @type = "text", required = "required" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Bairro)
                @Html.TextBoxFor(m => m.Bairro, new { @class = "form-control", @type = "text", required = "required" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Cep)
                @Html.TextBoxFor(m => m.Cep, new { @class = "form-control", @type = "text", required = "required", @id = "txtCEP" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Logradouro)
                @Html.TextBoxFor(m => m.Logradouro, new { @class = "form-control", @type = "text", required = "required" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Numero)
                @Html.TextBoxFor(m => m.Numero, new { @class = "form-control", @type = "number", required = "required" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.TipoLogradouro)
                @Html.DropDownListFor(m => m.TipoLogradouro, new SelectList(Enum.GetValues(typeof(StatueStoreWebApplic.Models.TipoLogradouros))), null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Complemento)
                @Html.TextBoxFor(m => m.Complemento, new { @class = "form-control", @type = "text", @name = "cpf" })
            </div>

            <button id="btnCadastrar" type="submit" class="btn btn-primary">Submit</button>
        }
    </div>
</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" type="text/javascript"></script>
<script src="http://digitalbush.com/files/jquery/maskedinput/rc3/jquery.maskedinput.js" type="text/javascript"></script>

<script>
    jQuery(function ($) {
        $("#txtCEP").mask("99.999-999");
    });

</script>