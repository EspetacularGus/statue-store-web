@model StatueStoreWebApplic.Models.CartaoDeCredito
@{
    ViewBag.Title = "Cadastro Cartao";
    Layout = "~/Views/Shared/_statueStoreLayout.cshtml";
}


<div class="container col-11 top5">
    <div class="col-10">
        <h2 style="padding-bottom: 1em;">Cartão De Crédito</h2>
        @using (Html.BeginForm(FormMethod.Post)) {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.Titular)
                @Html.TextBoxFor(m => m.Titular, new { @class = "form-control", @type = "text", required = "required" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Bandeira)
                @Html.DropDownListFor(m => m.Bandeira, new SelectList(Enum.GetValues(typeof(StatueStoreWebApplic.Models.Bandeira))), null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CVV)
                @Html.TextBoxFor(m => m.CVV, new { @class = "form-control", @type = "text", required = "required", @id = "txtCVV"})
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NumeroCartao)
                @Html.TextBoxFor(m => m.NumeroCartao, new { @class = "form-control", @type = "text", required = "required", @id= "txtNumCartao" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Validade)
                @Html.TextBoxFor(m => m.Validade, new { @class = "form-control", @type = "text", required = "required", @id = "txtValidade" })
            </div>
            <div class="form-check">
                @Html.CheckBoxFor(m => m.SalvarInfo, new { @class = "form-check-input", @type = "checkbox" })
                @Html.LabelFor(m => m.SalvarInfo, new { @class = "form-check-label" })
            </div>
            <div class="form-check">
                <small style="color: #454545">Suas informações de cartão de créditos são devidamente encriptadas em nosso sistema</small><br />
                <small style="color: #fa3636">Essa opção irá sobrescrever seu cartão já cadastrado (caso houver). </small>
            </div>

            <button id="btnCadastrar" type="submit" class="btn btn-primary top5">Submit</button>
        }
    </div>
</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" type="text/javascript"></script>
<script src="http://digitalbush.com/files/jquery/maskedinput/rc3/jquery.maskedinput.js" type="text/javascript"></script>

<script>
    jQuery(function ($) {
        $("#txtCVV").mask("999");
        $("#txtNumCartao").mask("9999-9999-9999-9999");
        $("#txtValidade").mask("99/9999");
    });

</script>