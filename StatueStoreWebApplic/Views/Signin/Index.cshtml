@model StatueStoreWebApplic.Models.Cliente

@{
    ViewBag.Title = "Registrar - Statue Store";
    Layout = "~/Views/Shared/_statueStoreLayout.cshtml";
}

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" type="text/javascript"></script>
<script src="http://digitalbush.com/files/jquery/maskedinput/rc3/jquery.maskedinput.js" type="text/javascript"></script>


<div class="container col-11 top2">
    <div class="col-10">
        <h2 style="padding-bottom: 1em;">Cadastro</h2>
        @using (Html.BeginForm(FormMethod.Post)) {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email" })
            </div>
            <div class="form-group form-inline">
                @Html.TextBoxFor(m => m.Senha, new { @class = "form-control", @type = "password", @placeholder = "Senha", @style = "margin-right: 6em;", @id = "txtSenha", @onkeyup = "verificaSenha()" })
                <input type="password" class="form-control" placeholder="Confirma senha" id="txtConfirmaSenha" onkeyup="verificaSenha()">
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Nome)
                @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @type = "text" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Sobrenome)
                @Html.TextBoxFor(m => m.Sobrenome, new { @class = "form-control", @type = "text" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Sexo) &nbsp;<br />
                <label class="form-check-label" for="exampleRadios1">
                    Masculino
                </label>
                @Html.RadioButtonFor(m => m.Sexo, "Masculino ", new { @class = "form-checkinput", @type = "radio", @id = "exampleRadios1" }) &nbsp;
                <label class="form-check-label" for="exampleRadios2">
                    Feminino
                </label>
                @Html.RadioButtonFor(m => m.Sexo, "Feminino", new { @class = "form-checkinput", @type = "radio", @id = "exampleRadios2" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Cpf)
                @Html.TextBoxFor(m => m.Cpf, new { @class = "form-control", @type = "text", @id = "cpf", @name = "cpf" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.DataNascimento)
                @Html.TextBoxFor(m => m.DataNascimento, new { @class = "form-control", @type = "date", @id = "txtDataNasc", @name = "dataNascimento" })
            </div>

            <button id="btnCadastrar" type="submit" class="btn btn-primary">Cadastrar</button>
        }
    </div>
</div>

<link href="~/Content/styleSignin.css" type="text/css" rel="stylesheet" />

<script>
    jQuery(function ($) {
        $(".datas").mask("99/99/9999");
        $("#cpf").mask("999.999.999-99");
    });

    function verificaSenha() {
        var fistInput = document.getElementById("txtSenha").value;
        var secondInput = document.getElementById("txtConfirmaSenha").value;

        document.getElementById("txtSenha").style.borderColor = "grey";
        document.getElementById("txtConfirmaSenha").style.borderColor = "grey";

        if (fistInput != secondInput) {
            document.getElementById("txtSenha").style.borderColor = "red";
            document.getElementById("txtConfirmaSenha").style.borderColor = "red";
        }
    }

